<%= item_wiki(arg) %>
<%= item_wiki(arg['skin']) if arg['skin'] %>
<%= item_wiki_list(arg['upgrades']) if arg['upgrades'] %>
<%= item_wiki_list(arg['infusions']) if arg['infusions'] %>
<span class="description">
  <a href="<%= path("/items/#{arg['id']}") %>"><%= h arg['name'] || "?#{arg['id']}?" %></a>
  <%= h item_count(arg) %>
  <% if damage_type = (arg['details'] || {})['damage_type'] %>
  (<%= damage_type %>)
  <% end %>
  <br/>
  <%= item_price(arg) %>
</span>
