    <a href="<%= path("/items/#{trans['id']}") %>"><%= h trans['name'] || "?#{trans['id']}?" %></a>
    <%= h item_count(trans) %>
    <br/>
    <%= price(trans['price']) %>
    <%= abbr_time_ago(trans['purchased'] || trans['created']) %>
